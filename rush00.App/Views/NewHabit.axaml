<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="rush00.App.Views.NewHabit"
        Title="NewHabit">
  <DockPanel>
    <Label DockPanel.Dock="Top">Set a habit to track:</Label>
    <TextBox DockPanel.Dock="Top" Text="{Binding Title}"/>
    <Label DockPanel.Dock="Top">What would be a motivation:</Label>
    <TextBox DockPanel.Dock="Top" Text="{Binding Motivation}"/>
    <Label DockPanel.Dock="Top">When will you start:</Label>
    <DatePicker DockPanel.Dock="Top"></DatePicker>
    <Label DockPanel.Dock="Top">How many days you want to challenge yourself for:</Label>
    <NumericUpDown DockPanel.Dock="Top"></NumericUpDown>
    <Button DockPanel.Dock="Top">Let's start!</Button>
  </DockPanel>  
</Window>
